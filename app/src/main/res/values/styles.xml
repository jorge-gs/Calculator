<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:buttonStyle">@android:style/Widget.Material.Button.Borderless.Colored</item>
    </style>

    <style name="LightButton" parent="android:Widget.Material.Button.Borderless.Colored">
        <item name="android:colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="DarkButton" parent="android:Widget.Material.Button.Borderless.Colored">
        <item name="android:colorButtonNormal">@color/colorPrimaryDark</item>
    </style>

    <style name="OrangeButton" parent="android:Widget.Material.Button.Borderless.Colored">
        <item name="android:colorButtonNormal">@color/colorAccent</item>
    </style>

</resources>
